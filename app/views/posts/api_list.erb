[
<% for i in (1..@posts.size) %>
    {
        "id":<%=@posts[i-1].id%>,
        "u":{
        <%if @posts[i-1].user == nil then%>
            "n":"DeletedUser",
            "id":-2
        <%else%>
            "n":"<%=@posts[i-1].user.name%>",
            "id":<%=@posts[i-1].user.id%>
        <%end%>
        },
        "t":"<%=@posts[i-1].title%>",
        "v":<%=@posts[i-1].votes.count%>,
        "r":<%=@posts[i-1].posts.count%>,
        "category":{
            "n":"<%=@posts[i-1].category.name%>",
            "id":<%=@posts[i-1].category.id%>
        }
    }<% if i != @posts.size %>,<% end %>
<% end %>
]